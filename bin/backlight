#!/bin/bash

bd=/sys/class/backlight/intel_backlight/brightness

bdv=$(cat $bd)

case $1 in
	up)
		if [ $bdv -gt 1400 ]
		then
			echo $(( 1500 )) > $bd
		else
			echo $(( bdv + 100 )) > $bd
		fi
		cat $bd
	;;
	down)
		if [ $bdv -lt 101 ]
		then
			echo $(( 1 )) > $bd
		else
			echo $(( bdv - 100 )) > $bd
		fi
		cat $bd
	;;
	max)
		echo $(( 1500 )) > $bd
		cat $bd
	;;
	min)
		echo $(( 1 )) > $bd
		cat $bd
	;;
	*)
	echo "$bdv"
esac
